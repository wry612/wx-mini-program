.header{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 2.5rem;
    color:#fff;
    background:#bd4745;
}
.header-choose {
    position: absolute;
    right: 0.46875rem;
    top: 0.2rem;
    color: #fff;
    font-size: 12px;
    z-index: 10;
}
.icon-choose{
    width: 0.5625rem;
    height: 0.5625rem;
    margin: 0 auto;
    margin-bottom: 0.15625rem;
}
.goods-name{
    font-size:16px;
}
.goods-code{
    font-size:12px;
}
.offer-section {
    padding-top: 2.5rem;
    background: #fff;
}
.offer-wrap {
    padding: 0.75rem 0;
    box-shadow: 0 0.25rem 0.109375rem 0.28125rem rgba(32,35,43,0.08);
    -webkit-box-shadow: 0 0.25rem 0.109375rem 0.28125rem rgba(32,35,43,0.08);
}
.offer-item {
    width: 49%;
    color: #999;
    text-align: center;
}
.percent {
    padding-top: 0.3125rem;
    color: #ff6060;
}
.mr{
    margin-right: 0.46875rem;
}
.diviling {
    width: 1px;
    height: 2.2rem;
    margin-top: 0.15625rem;
    background-image: linear-gradient(to top,#fff 0,#bd4745 50%,#fff 100%);
    background-image: -webkit-gradient(linear,left bottom,left top,from(#fff),color-stop(50%,#bd4745),color-stop(100%,#fff));
    background-image: -webkit-linear-gradient(bottom,#fff 0,#bd4745 50%,#fff 100%);
}
.cjl{
    margin-bottom: 0.375rem;
}
.quotation-section {
    color:#999;
    font-size:12px;
    background: #fff;
}
.quotation-item{
    float: left;
    width: 25%;
    padding: 0.3125rem 0;
}
.quotation-title{
    margin-right:0.2rem;
}
.quotation-tab {
    color: #999999;
}
.tab-item {
    float: left;
    width: 25%;
    padding: 0.3125rem 0;
    color: #999;
    text-align: center;
    border-bottom: 4px solid #e6e6e6;
}
.tab-item-active{
    color: #bd4745;
    border-bottom: 4px solid #bd4745;
}
.handicap-wrap {
    margin-bottom: 4rem;
}
.handicap-title {
    padding: 0.6rem 0.5rem;
    font-size: 16px;
    line-height: 0.5rem;
    text-align: left;
}
.details-wrap {
    background: #fff;
}
.details-box{
    width: 50%;
    padding: 0.5rem;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.details-left{
    border-right: 1px solid #ccc;
}
.warning-wrap {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 0.5rem 0.935rem;
    height:3rem;
    font-size:12px;
    background: #fff;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.icon-add{
    width: 32rpx;
    height:32rpx;
    margin-right:4px;
}
.btn {
    width: 40%;
    padding: 0.125rem 0.5rem;
    line-height: 0.5rem;
}