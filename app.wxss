/**app.wxss**/
page{
  position: relative;
  width: 100%;
  min-height: 100%;
  color:#333;
  font-size:14px;
  background:#e6e6e6;
  text-align: center;
  font-family: "Microsoft Yahei";
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 208rpx 0 60rpx;
  box-sizing: border-box;
} 
input{
  color:#333;
}

.btn{
    display: -webkit-box;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    width: 100%;
    height: 100%;
    color: #fff;
    text-align: center;
    justify-content: center;
    border: 1px solid #bd4745;
    border-radius: 0.2rem;
    background-color: #bd4745;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.btn.border {
    color: #bd4745;
    text-align: center;
    background: none;
}
.text-center{
  text-align: center;
}
.clearfix::before, .clearfix::after {
	display: table;
	line-height: 0;
	content: "";
}
.clearfix::after {
	clear: both;
}
.float-right{
  float: right !important;
}
.float-left{
  float: left !important;
}
.bt-none{
  border-top:none !important;
}
.green{
  color:#26b463 !important;
}
.red{
  color:#ff6060 !important;
}